%p.navpath
  = link_to 'Domains', admin_domains_url

%h1 Domains
%table.listing
  %tr
    %th Name
    %th Type
    %th Owner
    %th Created
    %th Last updated
    %th Action
  - for domain in @domains
    %tr
      %td.nameColumn
        = link_to h(domain.name), admin_domain_url(domain)
      %td.typeColumn
        = h(domain.domtype)
      %td.ownerColumn
        = h(domain.owner)
      %td.createdColumn
        = h(domain.created_at.strftime('%Y-%m-%d %H:%M'))
      %td.changedColumn
        = h(domain.updated_at.strftime('%Y-%m-%d %H:%M'))
      %td.actionsColumn
        = link_to 'Details', admin_domain_url(domain)
        \&nbsp;
        = link_to 'Delete', admin_domain_url(domain), :method => :delete
.add
  %p= link_to 'New domain', new_admin_domain_url
