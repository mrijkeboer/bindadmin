%p.navpath
  = link_to 'Defaults', admin_default_url(@default)
  \&raquo;
  = link_to 'edit', edit_admin_default_url(@default)

%h1 Edit defaults
%p
  Fields labeled in
  %b bold
  are required.
= form_for(:default, :url => admin_default_url(@default), :html => { :method => :put}) do |f|
  %table.edit
    %tr
      %th= f.label :ttl, "TTL:", :class => "required"
      %td= f.text_field :ttl
      %td.error= @default.errors[:ttl].first
    %tr
      %th= f.label :mname, "Origin:", :class => "required"
      %td= f.text_field :mname
      %td.error= @default.errors[:mname].first
    %tr
      %th= f.label :rname, "Person:", :class => "required"
      %td= f.text_field :rname
      %td.error= @default.errors[:rname].first
    %tr
      %th= f.label :serial, "Serial:", :class => "required"
      %td= f.text_field :serial
      %td.error= @default.errors[:serial].first
    %tr
      %th= f.label :refresh, "Refresh:", :class => "required"
      %td= f.text_field :refresh
      %td.error= @default.errors[:refresh].first
    %tr
      %th= f.label :retry, "Retry:", :class => "required"
      %td= f.text_field :retry
      %td.error= @default.errors[:retry].first
    %tr
      %th= f.label :expire, "Expire:", :class => "required"
      %td= f.text_field :expire
      %td.error= @default.errors[:expire].first
    %tr
      %th= f.label :minimum, "Minimum:", :class => "required"
      %td= f.text_field :minimum
      %td.error= @default.errors[:minimum].first
    %tr
      %th &nbsp;
      %td= f.submit "Save", :class => "button"
