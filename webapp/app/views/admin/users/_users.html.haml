- for user in @users
  %tr
    %td.fullnameColumn
      = link_to h(user.fullname), admin_user_url(user)
    %td.roleColumn
      = h(user.role)
    %td.usernameColumn
      = h(user.username)
    %td.actionsColumn
      = link_to 'Details', admin_user_url(user)
      ,
      \#{link_to 'Edit', edit_admin_user_url(user)},
      \#{link_to 'Delete', admin_user_url(user), :method => :delete}
