%p.navpath
  = link_to 'Users', admin_users_url
  \&raquo;
  \#{link_to h(@user.fullname), admin_user_url(@user)} &raquo;
  \#{link_to 'edit', edit_admin_user_url(@user)}
%h1 Edit user
%p
  Fields labeled in
  %b bold
  are required.
= form_for(:user, :url => admin_user_url(@user), :html => { :method => :put }) do |form|
  %table.edit
    %tr
      %th
        %label.required{:for => "user_username"} Username:
      %td= form.text_field :username, :disabled => "disabled"
      %td= @user.errors[:username].first
    %tr
      %th
        %label.required{:for => "user_fullname"} Fullname:
      %td= form.text_field :fullname
      %td= @user.errors[:fullname].first
    %tr
      %th
        %label.required{:for => "user_role"} Role:
      %td= form.select :role, User::ROLES, {}, {:disabled => "disabled"}
      %td= @user.errors[:role].first
    %tr
      %th
        %label.required{:for => "user_password"} Password:
      %td= form.password_field :password
      %td= @user.errors[:password].first
    %tr
      %th
        %label.required{:for => "user_password_confirmation"} Confirm:
      %td= form.password_field :password_confirmation
      %td= @user.errors[:password_confirmation].first
    %tr
      %th &nbsp;
      %td= submit_tag "Save", :class => "button"
