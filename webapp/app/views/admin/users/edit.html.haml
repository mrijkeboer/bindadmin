%p.navpath
  = link_to 'Users', admin_users_url
  \&raquo;
  = link_to h(@user.fullname), admin_user_url(@user)
  \&raquo;
  = link_to 'edit', edit_admin_user_url(@user)

%h1 Edit user
%p
  Fields labeled in
  %b bold
  are required.
= form_for(:user, :url => admin_user_url(@user), :html => { :method => :put }) do |f|
  %table.edit
    %tr
      %th= f.label :username, "Username:", :class => "required"
      %td= f.text_field :username, :disabled => "disabled"
      %td.error= @user.errors[:username].first
    %tr
      %th= f.label :fullname, "Fullname:", :class => "required"
      %td= f.text_field :fullname
      %td.error= @user.errors[:fullname].first
    %tr
      %th= f.label :role, "Role:", :class => "required"
      %td= f.select :role, User::ROLES, {}, {:disabled => "disabled"}
      %td.error= @user.errors[:role].first
    %tr
      %th= f.label :password, "Password:", :class => "required"
      %td= f.password_field :password
      %td.error= @user.errors[:password].first
    %tr
      %th= f.label :password_confirmation, "Confirm:", :class => "required"
      %td= f.password_field :password_confirmation
      %td.error= @user.errors[:password_confirmation].first
    %tr
      %th &nbsp;
      %td= f.submit "Save", :class => "button"
