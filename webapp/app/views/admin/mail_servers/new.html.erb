<p class="navpath">
<%= link_to 'Defaults', admin_default_url(@default) -%> &raquo; 
<%= link_to 'new mail server', new_admin_default_mail_server_url(@default.id) -%>
</p>

<h1>New mail server</h1>

<p>Fields labeled in <b>bold</b> are required.</p>
<% form_for(:mail_server, :url => admin_default_mail_servers_url(@default.id)) do |f| %>

	<table class="edit">
		<tr>
			<th><label for="mail_server_name" class="required">Fqdn:</label></th>
			<td><%= f.text_field :fqdn %></td>
			<td><%= error_message_on :mail_server, :fqdn %></td>
		</tr>

		<tr>
			<th><label for="mail_server_pref" class="required">Preference:</label></th>
			<td><%= f.text_field :pref %></td>
			<td><%= error_message_on :mail_server, :pref %></td>
		</tr>

		<tr>
			<th><label for="mail_server_ttl">TTL:</label></th>
			<td><%= f.text_field :ttl %></td>
			<td><%= error_message_on :mail_server, :ttl %></td>
		</tr>

		<tr>
			<th>&nbsp;</th>
			<td><%= submit_tag "Save", :class => "button" %></td>
		</tr>
	</table>
<% end %>
