%p.navpath
  = link_to 'Defaults', admin_default_url(@default)
  \&raquo;
  \#{link_to 'new name server', new_admin_default_name_server_url(@default.id)}
%h1 New name server
%p
  Fields labeled in
  %b bold
  are required.
= form_for(:name_server, :url => admin_default_name_servers_url(@default.id)) do |f|
  %table.edit
    %tr
      %th
        %label.required{:for => "name_server_name"} Fqdn:
      %td= f.text_field :fqdn
      %td= @name_server.errors[:fqdn].first
    %tr
      %th
        %label{:for => "name_server_ttl"} TTL:
      %td= f.text_field :ttl
      %td= @name_server.errors[:ttl].first
    %tr
      %th &nbsp;
      %td= submit_tag "Save", :class => "button"
